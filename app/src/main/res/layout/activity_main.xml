<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:id="@+id/main"
    tools:context=".MainActivity"
    android:layout_height="fill_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/main2"
        android:layout_height="match_parent"
        android:background="#311E10"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="136dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="@dimen/topmargin"
            android:layout_marginRight="@dimen/topmargin"
            android:elevation="4dp"
            app:cardCornerRadius="3dp">

            <LinearLayout
                android:id="@+id/bradlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"
                android:orientation="horizontal"
                android:weightSum="10">


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:background="@drawable/main_header_selector">


                    <TextView
                        android:id="@+id/bradtext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="8dp"
                        android:layout_centerVertical="true"
                        android:text="برد پیت"
                        android:textColor="#EABE7C"
                        android:textSize="18sp" />


                    <TextView
                        android:layout_margin="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="برنامه تمرینی فایت کلاب"
                        android:textColor="#ECE4B7"
                        android:textSize="24sp" />




                </RelativeLayout>


                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:id="@+id/bradImg"
                 />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="136dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="@dimen/topmargin"
            android:layout_marginRight="@dimen/topmargin"
            android:elevation="4dp"
            app:cardCornerRadius="3dp">

            <LinearLayout
                android:id="@+id/zaclay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"
                android:orientation="horizontal"
                android:weightSum="10">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:background="@drawable/main_header_selector">

                    <TextView
                        android:layout_centerVertical="true"
                        android:id="@+id/zactext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="8dp"
                        android:text="زک افران"
                        android:textColor="#EABE7C"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="فیزیک سزازوار شن و آفتاب ساحلی"
                        android:layout_margin="4dp"
                        android:textColor="#ECE4B7"
                        android:textSize="24sp" />

                </RelativeLayout>


                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    android:layout_weight="5"
                    android:id="@+id/ZacImg" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="136dp"
            android:layout_marginTop="16dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/padlock"
                android:layout_margin="16dp"

                />
        <android.support.v7.widget.CardView
            android:alpha="0.6"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/topmargin"
            android:layout_marginRight="@dimen/topmargin"
            android:layout_height="136dp"

            android:elevation="4dp"
            app:cardCornerRadius="3dp">

            <LinearLayout
                android:id="@+id/rocklay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="10">


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:background="@drawable/main_header_selector">

                    <TextView
                        android:layout_centerVertical="true"
                        android:id="@+id/rocktext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:text="دواین جانسون"
                        android:layout_margin="8dp"
                        android:layout_marginTop="4dp"
                        android:textColor="#ECE4B7"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_margin="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="مثل یک جنگجو تمرین کنید"
                        android:textColor="#ECE4B7"
                        android:textSize="24sp" />

                </RelativeLayout>


                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:id="@+id/RockImg"
                />


            </LinearLayout>

        </android.support.v7.widget.CardView>

        </FrameLayout>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="136dp"
            android:layout_marginLeft="@dimen/topmargin"
            android:layout_marginRight="@dimen/topmargin"
            android:layout_marginTop="16dp"
            android:elevation="4dp"
            app:cardCornerRadius="3dp">

            <LinearLayout
                android:id="@+id/slylay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"
                android:orientation="horizontal"
                android:weightSum="10">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:background="@drawable/main_header_selector">

                    <TextView
                        android:id="@+id/slytext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="8dp"
                        android:text="سیلوستر استالونه"
                        android:layout_marginTop="4dp"
                        android:textColor="#EABE7C"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_margin="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="دستان خود را مثل راکی بسازید"
                        android:textColor="#ECE4B7"
                        android:textSize="24sp" />



                </RelativeLayout>


                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:id="@+id/SlyImg"
               />


            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="136dp"
            android:layout_marginLeft="@dimen/topmargin"
            android:layout_marginTop="16dp"
            android:layout_marginRight="@dimen/topmargin"
            android:elevation="4dp"
            app:cardCornerRadius="3dp">

            <LinearLayout
                android:id="@+id/chrislay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"
                android:orientation="horizontal"
                android:weightSum="10">


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:background="@drawable/main_header_selector">


                    <TextView
                        android:id="@+id/christext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"

                        android:text="کریس همسورث"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="8dp"
                        android:layout_marginTop="4dp"
                        android:textColor="#EABE7C"
                        android:textSize="16sp" />


                    <TextView
                        android:text="تور چگونه تمرین میکند؟"
                        android:layout_margin="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="#ECE4B7"
                        android:textSize="24sp" />

                </RelativeLayout>


                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:id="@+id/ChrisImg" />

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="136dp"
            android:layout_marginLeft="@dimen/topmargin"
            android:layout_marginTop="16dp"
            android:layout_marginRight="@dimen/topmargin"
            android:elevation="4dp"
            app:cardCornerRadius="3dp">

            <LinearLayout
                android:id="@+id/hughlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"
                android:orientation="horizontal"
                android:weightSum="10">


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:background="@drawable/main_header_selector">

                    <TextView
                        android:id="@+id/marktext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="8dp"
                        android:layout_marginTop="4dp"
                        android:text="هیو جکمن"
                        android:layout_centerVertical="true"
                        android:textColor="#EABE7C"
                        android:textSize="16sp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="برای یک بدن گرگینه"
                        android:layout_margin="4dp"
                        android:textColor="#ECE4B7"
                        android:textSize="24sp" />

                </RelativeLayout>


                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:id="@+id/HughImg"
                    />


            </LinearLayout>

        </android.support.v7.widget.CardView>



    </LinearLayout>
</ScrollView>

